[core]
	excludesfile = /Users/jitendra/.gitignore

[user]
	name = Jitendra Kumar
    email = jitendra.iitp@gmail.com
    username = jitendrakr88

[alias]
    s = status
    pl = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --

[diff]
    tool = vimdiff

[difftool]
    prompt=false
    trustExitCode = true

[credential]
    helper = osxkeychain
    useHttpPath = true

[color]
  ui = always

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red

[color "branch"]
    current = yellow
	local = green
    remote = cyan
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
